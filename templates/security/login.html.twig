{% extends 'base.html.twig' %}

{% block body %}
    {% include 'homepageTemplate/background.html.twig' %}
        <h1 class="h3 mb-3 font-weight-normal" style="z-index:1;position: fixed; left:41%; top:7%"> Please sign in</h1>
    <form method="post" id="mformulaire">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}
            </div>
        {% endif %}

        
        <label for="inputUsername" style="color: white;">Username</label>
        <input type="text" value="{{ last_username }}" style="color: white;" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
        <label for="inputPassword" style="color: white;">Password</label>
        <input type="password" name="password" id="inputPassword" style="color: white;" class="form-control" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <button class="btn btn-primary" type="submit">
            Sign in
        </button>

        <a href="{{ path('app_register') }}" class="btn btn-primary">Register</a>
        <a href="{{ path('homepage') }}" class="btn btn-primary">HomePage</a>
    </form>
{% endblock %}
