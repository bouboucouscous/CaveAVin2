{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <a href="{{ path('app_login') }}" class="btn btn-primary">Se connecter</a>

    {# Formulaire de filtres #}
    <form method="get" action="{{ path('filtre') }}">
        <div class="form-group">
            <label for="annee">Ann√©e :</label>
            <select name="annee" id="annee" class="form-control">
                <option value="">Tous</option>
                {% for annee in annees %}
                    <option value="{{ annee }}">{{ annee }}</option>
                {% endfor %}
            </select>homepage
        </div>
        <div class="form-group">
            <label for="formatCl">Format :</label>
            <select name="formatCl" id="formatCl" class="form-control">
                <option value="">Tous</option>
                {% for format in formats %}
                    <option value="{{ format }}">{{ format }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label for="robe">Robe :</label>
            <select name="robe" id="robe" class="form-control">
                <option value="">Tous</option>
                <{% for robe in robes %}
                    <option value="{{ robe }}">{{ robe }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label for="teneurEnSucre">Teneur en sucre :</label>
            <select name="teneurEnSucre" id="teneurEnSucre" class="form-control">
                <option value="">Tous</option>
                 {% for teneur in teneurEnSucres %}
                    {% for teneurEnSucre in teneur %}
                        <option value="{{ teneurEnSucre }}">{{ teneurEnSucre }}</option>
                    {% endfor %}
                {% endfor %}
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Filtrer</button>
    </form>
    <a href="{{ path('homepage') }}">Supprimer les filtres</a>

    <h1>Liste des vins</h1>    
    {% for vin in pagination %}
        <ul>
            <li>{{ vin.Nom }}</li>
            <li>{{ vin.Annee }}</li>
            <li>{{ vin.formatCl }}</li>
            <li>{{ vin.robe }}</li>
            <li>{{ vin.TeneurEnSucre }}</li>

        </ul>
    {% endfor %}

    {{ knp_pagination_render(pagination) }}
{% endblock %}
