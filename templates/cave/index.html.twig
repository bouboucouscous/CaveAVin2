{% extends 'base.html.twig' %}

{% block title %}Cave index{% endblock %}

{% block body %}
    {% include 'homepageTemplate/background.html.twig' %}
    {% include 'homepageTemplate/navBarUtilisateur.html.twig' %}

    <div class="container" style="margin-top:5%; margin-left:35%%">
        <div class="row same-height justify-content-center">
            <h1>Votre CaveCave</h1>

            <table class="table-light">
                <thead>
                    <tr>
                        <th>Vin</th>
                        <th>Date d'entré</th>
                        <th>Date de sortie</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody style="top:5%">
                {% for cave in caves %}
                    <tr>
                        <td>{{ cave.nom }}</td>
                        <td>{{ cave.enter_date ? cave.enter_date|date('Y-m-d') : '' }}</td>
                        <td>{{ cave.exit_date ? cave.exit_date|date('Y-m-d') : '' }}</td>
                        <td>
                            <a class="btn btn-primary" href="{{ path('app_cave_edit', {'id': cave.id}) }}">modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a  style="margin-top:5%;" class="btn btn-primary" href="{{ path('app_cave_new') }}">Ajouter une bouteille à votre cave</a>
{% endblock %}
